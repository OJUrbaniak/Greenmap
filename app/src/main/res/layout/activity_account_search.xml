<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535"
    tools:context=".AccountSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.05"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="Search for an account to follow"
            android:textColor="#F4F4F4"
            android:textSize="20sp" />

        <SearchView
            android:id="@+id/nameSearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:iconifiedByDefault="false"
            android:queryHint="Search" />

        <LinearLayout
            android:id="@+id/tblHeaders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:fontFamily="casual"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#F4F4F4" />

            <TextView
                android:id="@+id/descLabel"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:fontFamily="casual"
                android:singleLine="true"
                android:text="Action"
                android:textAlignment="center"
                android:textColor="#F4F4F4" />

            <TextView
                android:id="@+id/actionLabel"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:fontFamily="casual"
                android:text="Ban User"
                android:textAlignment="center"
                android:textColor="#F4F4F4"
                android:visibility="visible" />

            <TextView
                android:id="@+id/makeAdminLabel"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:fontFamily="casual"
                android:singleLine="true"
                android:text="Make Admin"
                android:textAlignment="center"
                android:textColor="#F4F4F4" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <TableLayout
                android:id="@+id/createdPOITable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" />
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>